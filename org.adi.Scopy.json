				},
				{
					"type": "script",
					"commands": [
						"#!/bin/sh",
						"exec ./bootstrap.sh --with-libraries=date_time,filesystem,program_options,regex,system,test,thread --prefix=/app"
					],
					"dest-filename": "configure"
				},
				{
					"type": "script",
					"commands": [
						"all:",
						"\t./b2",
						"install:",
						"\t./b2 install"
					],
					"dest-filename": "Makefile"
				}
			]
		},
		{
			"name": "markdown",
			"cleanup": [ "*" ],
